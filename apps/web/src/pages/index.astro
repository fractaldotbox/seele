---

import { TokenPriceChartWithProvider } from "@/components/local/TokenPriceChartWithProvider";
import Header from "../components/Header.astro";
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/globals.css";

---

<Layout>
	<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SEELE</title>
  </head>
  <body class="bg-white font-sans text-gray-900">
    <Header />
    
    {/* Market Ticker Bar */}
    <div class="w-full bg-black text-white py-2 overflow-hidden">
      <div class="ticker-container">
        <div class="ticker-slide flex space-x-12">
          <div class="flex items-center whitespace-nowrap">
            <span class="font-medium">USDC</span>
            <span class="ml-2">$1.00</span>
            <span class="ml-2 text-green-500">▲ 0.00%</span>
          </div>
          <div class="flex items-center whitespace-nowrap">
            <span class="font-medium">DAI</span>
            <span class="ml-2">$1.00</span>
            <span class="ml-2 text-green-500">▲ 0.00%</span>
          </div>
          <div class="flex items-center whitespace-nowrap">
            <span class="font-medium">LINK</span>
            <span class="ml-2">$7.50</span>
            <span class="ml-2 text-red-500">▼ 1.00%</span>
          </div>
          <div class="flex items-center whitespace-nowrap">
            <span class="font-medium">MATIC</span>
            <span class="ml-2">$0.90</span>
            <span class="ml-2 text-green-500">▲ 2.50%</span>
          </div>
          <div class="flex items-center whitespace-nowrap">
            <span class="font-medium">ETH</span>
            <span class="ml-2">$1,800.00</span>
            <span class="ml-2 text-green-500">▲ 0.50%</span>
          </div>
          <div class="flex items-center whitespace-nowrap">
            <span class="font-medium">USDT</span>
            <span class="ml-2">$1.00</span>
            <span class="ml-2 text-green-500">▲ 0.00%</span>
          </div>
          <div class="flex items-center whitespace-nowrap">
            <span class="font-medium">BNB</span>
            <span class="ml-2">$300.00</span>
            <span class="ml-2 text-red-500">▼ 1.20%</span>
          </div>
          <div class="flex items-center whitespace-nowrap">
            <span class="font-medium">ADA</span>
            <span class="ml-2">$0.40</span>
            <span class="ml-2 text-green-500">▲ 1.00%</span>
          </div>
          <div class="flex items-center whitespace-nowrap">
            <span class="font-medium">PEPE</span>
            <span class="ml-2">$0.01</span>
            <span class="ml-2 text-green-500">▲ 5.00%</span>
          </div>
        </div>
        <div class="ticker-slide flex space-x-12 ml-[50%]" aria-hidden="true">
          <div class="flex items-center whitespace-nowrap">
            <span class="font-medium">USDC</span>
            <span class="ml-2">$1.00</span>
            <span class="ml-2 text-green-500">▲ 0.00%</span>
          </div>
          <div class="flex items-center whitespace-nowrap">
            <span class="font-medium">DAI</span>
            <span class="ml-2">$1.00</span>
            <span class="ml-2 text-green-500">▲ 0.00%</span>
          </div>
          <div class="flex items-center whitespace-nowrap">
            <span class="font-medium">LINK</span>
            <span class="ml-2">$7.50</span>
            <span class="ml-2 text-red-500">▼ 1.00%</span>
          </div>
          <div class="flex items-center whitespace-nowrap">
            <span class="font-medium">MATIC</span>
            <span class="ml-2">$0.90</span>
            <span class="ml-2 text-green-500">▲ 2.50%</span>
          </div>
          <div class="flex items-center whitespace-nowrap">
            <span class="font-medium">ETH</span>
            <span class="ml-2">$1,800.00</span>
            <span class="ml-2 text-green-500">▲ 0.50%</span>
          </div>
          <div class="flex items-center whitespace-nowrap">
            <span class="font-medium">USDT</span>
            <span class="ml-2">$1.00</span>
            <span class="ml-2 text-green-500">▲ 0.00%</span>
          </div>
          <div class="flex items-center whitespace-nowrap">
            <span class="font-medium">BNB</span>
            <span class="ml-2">$300.00</span>
            <span class="ml-2 text-red-500">▼ 1.20%</span>
          </div>
          <div class="flex items-center whitespace-nowrap">
            <span class="font-medium">ADA</span>
            <span class="ml-2">$0.40</span>
            <span class="ml-2 text-green-500">▲ 1.00%</span>
          </div>
          <div class="flex items-center whitespace-nowrap">
            <span class="font-medium">PEPE</span>
            <span class="ml-2">$0.01</span>
            <span class="ml-2 text-green-500">▲ 5.00%</span>
          </div>
        </div>
      </div>
    </div>

    <style>
      .ticker-container {
        display: flex;
        width: 100%;
        overflow: hidden;
        position: relative;
      }

      .ticker-slide {
        animation: slide 40s linear infinite;
        min-width: 100%;
      }

      @keyframes slide {
        from {
          transform: translateX(0);
        }
        to {
          transform: translateX(calc(-100% - 4rem));
        }
      }

      .ticker-container:hover .ticker-slide {
        animation-play-state: paused;
      }
    </style>

    <main class="container mx-auto px-6 py-8">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        {/* Main Content Area */}
        <div class="lg:col-span-8">
          <article class="mb-8">
            <img src="/path-to-main-image.jpg" alt="Featured Story" class="w-full h-96 object-cover mb-4"/>
            <h1 class="text-3xl font-bold mb-2">Main Headline Story</h1>
            <p class="text-gray-600 mb-4">Detailed description of the main story with key points and analysis...</p>
          </article>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {/* Secondary Stories */}
            {Array.from({ length: 4 }).map((_, i) => (
              <article class="border-b border-gray-200 pb-4">
                <h3 class="text-xl font-semibold mb-2">Market Update {i + 1}</h3>
                <p class="text-gray-600 text-sm">
                  Key market insights and analysis for today's trading session...
                </p>
              </article>
            ))}
          </div>
        </div>

        {/* Sidebar */}
        <div class="lg:col-span-4">
          <div class="bg-gray-100 p-4 mb-6">
            <h2 class="text-lg font-bold mb-4">Latest Market Data</h2>
            <TokenPriceChartWithProvider client:load />
          </div>
        </div>
      </div>
    </main>

    <footer class="bg-gray-100 mt-12 py-6">
      <div class="container mx-auto px-6 text-center text-sm text-gray-600">
        This website is censorship-resistant & unstoppable deployed onto EthStorage and Arweave.
        <div class="mt-2">
          <a class="text-blue-600 hover:underline">Powered by SEELE</a>
        </div>
      </div>
    </footer>
  </body>
</html>
	<Welcome />
</Layout>
