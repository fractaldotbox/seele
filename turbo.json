{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["HUMANITY_API_KEY"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "test/**/*",
        "package.json"
      ],
      "outputs": []
    }
  }
}
