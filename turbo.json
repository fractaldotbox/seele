{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "HUMANITY_API_KEY",
    "THE_GRAPH_API_KEY",
    "NEXT_PUBLIC_PRIVY_APP_ID",
    "PRIVATE_KEY_STORAGE",
    "PRIVATE_KEY_AGENT",
    "PRIVATE_KEY_MANAGER",
    "DIRECTORY_ADDRESS_MANAGER"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "test/**/*",
        "package.json"
      ],
      "outputs": []
    }
  }
}
